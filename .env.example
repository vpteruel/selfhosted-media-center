# ========================
# BASE CONFIGURATION
# ========================
TZ=America/New_York
PUID=1000
PGID=1000

# ========================
# PATHS
# ========================
# Base path for all media and configs
MEDIA_PATH=/mnt/media
CONFIG_PATH=/mnt/media/config

# ========================
# VPN CONFIGURATION (Surfshark WireGuard)
# ========================
VPN_SERVICE_PROVIDER=surfshark
VPN_TYPE=wireguard # wireguard | openvpn
WIREGUARD_PRIVATE_KEY=your_private_key_here
WIREGUARD_ADDRESSES=your_addresses_here
WIREGUARD_PUBLIC_KEY=your_public_key_here
DNS_ADDRESS=your_dns_here
SERVER_COUNTRIES=your_countries_here
SERVER_CITIES=your_cities_here